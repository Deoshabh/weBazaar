# Backend Environment Variables (for docker-compose.traefik.yml)
# Copy these to your .env file and fill in the actual values

# Node Environment
NODE_ENV=production
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb://username:password@mongodb-host:27017/weBazaar

# JWT Secrets (use strong, random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this

# MinIO Configuration
MINIO_ENDPOINT=minio.weBazaar.in
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=weBazaar-images
MINIO_USE_SSL=true

# API URLs
FRONTEND_URL=https://weBazaar.in
API_URL=https://api.weBazaar.in

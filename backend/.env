PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://127.0.0.1:27017/shoes_auth

# Client
CLIENT_URL=http://localhost:3000

# JWT Secrets (replace before running in shared environments)
JWT_SECRET=replace-with-local-dev-secret
JWT_ACCESS_SECRET=replace-with-local-dev-access-secret
JWT_REFRESH_SECRET=replace-with-local-dev-refresh-secret

# JWT Expiration
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Razorpay
RAZORPAY_KEY_ID=replace-with-razorpay-key-id
RAZORPAY_KEY_SECRET=replace-with-razorpay-key-secret

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=product-media
MINIO_REGION=us-east-1

# Shiprocket
SHIPROCKET_EMAIL=replace-with-shiprocket-email
SHIPROCKET_PASSWORD=replace-with-shiprocket-password
SHIPROCKET_WEBHOOK_TOKEN=replace-with-webhook-token
# SHIPROCKET_WEBHOOK_SECRET=replace-with-webhook-secret

# Soketi
SOKETI_APP_ID=replace-with-soketi-app-id
SOKETI_APP_KEY=replace-with-soketi-app-key
SOKETI_APP_SECRET=replace-with-soketi-app-secret
SOKETI_CLUSTER=mt1
SOKETI_HOST=localhost
SOKETI_PORT=6001
SOKETI_USE_TLS=false

# Firebase Admin SDK (for backend authentication)
# Option 1: Use service account file path (recommended for local development)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Use individual credentials (for production/Docker)
# FIREBASE_PROJECT_ID=radeo-2026
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@radeo-2026.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
